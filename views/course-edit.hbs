<h1>Редактировать {{course.title}}</h1>

<form action="/courses/edit" method="post">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" autocomplete="off" required value="{{course.title}}">
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название" data-success="right"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="text" class="validate" autocomplete="off" required min="1" value="{{course.price}}">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену" data-success="right"></span>
    </div>

    <div class="input-field">
        <input id="image" name="image" type="text" class="validate" autocomplete="off" required value="{{course.image}}">
        <label for="image">Url картинки</label>
        <span class="helper-text" data-error="Введите url картинки" data-success="right"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn btn-primary">Редактировать курс</button>
</form>
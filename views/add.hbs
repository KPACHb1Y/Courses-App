<h1>Добавить новый курс</h1>

<form action="/add" method="post">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" autocomplete="off" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название" data-success="right"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="text" class="validate" autocomplete="off" required min="1">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену" data-success="right"></span>
    </div>

    <div class="input-field">
        <input id="image" name="image" type="text" class="validate" autocomplete="off" required>
        <label for="image">Url картинки</label>
        <span class="helper-text" data-error="Введите url картинки" data-success="right"></span>
    </div>

    <button class="btn btn-primary">Добавить курс</button>
</form>